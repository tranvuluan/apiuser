<!-- Header -->
<%- include('include/_header.ejs') %> 
<!-- / Header -->
<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-between p-3">
            <a href="/" class="border">
                <span class="text-gradient p-3"> <i class="fas fa-angle-double-left"></i>All user</span>
            </a>
        </div>
        <br>
        <!-- form handling -->
        <h2 class="text-center">Create new account</h2>
        <form action="/api/users" id="add_user" method="POST">
            <div class="row">
                <div class="col-6">
                    <label for="name">Name</label>
                    <input type="text" name="name" class="form-control" value="">
                </div>
                <div class="col-6">
                    <label for="email">Email</label>
                    <input type="text" name="email" class="form-control" value="">
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-6">
                    <label for="gender" class="mr-3">Gender:</label>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="gender" 
                            value="male" >Male
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="gender" 
                            value="female">Female
                        </label>
                    </div>
                </div>
                <div class="col-6">
                    <label for="gender" class="mr-3">Status:</label>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="status" 
                            value="active">Active
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="status" 
                            value="suspend">Suspend
                        </label>
                    </div>
                </div>
            </div>
            <button class="mt-3 w-100 btn btn-info">Submit</button>
        </form>
    </div>
</main>
<!-- / Main Site -->

<!-- Footer -->
<%- include('include/_footer') %> 
<!-- /Footer -->
