<!-- Header -->
<%- include('include/_header.ejs') %> 
<!-- / Header -->
<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex-justify-between p-3">
            <a href="/" class="border">
                <span class="text-gradient p-3"> <i class="fas fa-angle-double-left"></i>All user</span>
            </a>
        </div>
        <br>
        <!-- form handling -->
        <h2 class="text-center">Update User</h2>
        <form id="update_user" method="POST">
            <div class="row">
                <div class="col-6">
                    <label for="name">Name</label>
                    <input type="hidden" name="id" value="<%= user._id %> ">
                    <input type="text" name="name" class="form-control" value="<%= user.name %> ">
                </div>
                <div class="col-6">
                    <label for="email">Email</label>
                    <input type="text" name="email" class="form-control" value="<%= user.email %> ">
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-6">
                    <label for="gender" class="mr-3">Gender:</label>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="gender" 
                            <%= user.gender == 'male' ? 'checked' : '' %> 
                            value="male" >Male
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="gender" 
                            <%= user.gender == 'female' ? 'checked' : '' %> 
                            value="female">Female
                        </label>
                    </div>
                </div>
                <div class="col-6">
                    <label for="gender" class="mr-3">Status:</label>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="status" 
                            <%= user.status == 'active' ? 'checked' : '' %> 
                            value="active">Active
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="status" 
                            <%= user.status == 'suspend' ? 'checked' : '' %> 
                            value="suspend">Suspend
                        </label>
                    </div>
                </div>
            </div>
            <button class="mt-3 w-100 btn btn-info">Submit</button>
        </form>
    </div>
</main>
<!-- / Main Site -->

<!-- Footer -->
<%- include('include/_footer.ejs') %> 
<!-- /Footer -->
